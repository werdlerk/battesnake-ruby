root = true

[*]
indent_size = 2
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true

[*.rb]
indent_size = 2
max_line_length = 115


[*.{js,jsx}]
indent_size = 2
max_line_length = 115

[*.{css, less}]
indent_size = 2
max_line_length = 115

[*.md]
trim_trailing_whitespace = false
max_line_length = 72

[package.json]
indent_size = 2
max_line_length = 115
