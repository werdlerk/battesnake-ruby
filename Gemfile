source 'https://rubygems.org'

gem 'sinatra'
gem 'json'
gem 'rack-contrib'
gem 'activesupport'
gem 'pathfinding'

group :development, :test do
  # auto reload
  gem 'rerun'
  # WEBrick application server
  gem 'webrick'
  # RSpec testing
  gem 'rspec'
  gem 'rack-test'
  # Code style
  gem 'reek'
  gem 'rexml'
  gem 'rufo'
  gem 'debug'
end

group :production do
  # Use Passenger as app server
  gem 'passenger'
end
